<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Form</title>

    <link rel="stylesheet" href="css/style.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: "inter", sans-serif;
    }

    .register {
      width: 350px;
      height: 600px;
      background-color: rgb(255, 254, 254);
      margin: auto;
      padding: 40px;
      box-shadow: 0px 5px 40px 10px rgba(211, 211, 211, 0.2);
      margin-top: 50px;
      border-radius: 15px;
      text-align: center;
      padding-bottom: 20px;
    }

    .register h1 {
      margin: 15px;
      color: rgb(78, 79, 80);
    }
    .register p {
      color: rgba(158, 155, 155, 1);
      font-size: 15px;
    }

    .paper_ico {
      width: 25%;
    }

    .register .media {
      background-color: white;
      border-radius: 50%;
      border: 1px solid gray;
      font-size: 20px;
      width: 35px;
      padding: 5px;
      font-weight: bold;
      outline: none;
      cursor: pointer;
    }

    .register .google {
      color: rgb(231, 87, 50);
    }

    .google:hover {
      background-color: rgb(231, 87, 50);
      color: #fff;
    }

    .register input {
      display: block;
      margin: auto;
      margin-bottom: 20px;
      width: 100%;
      border: 0px;
      border-radius: 25px;
      background-color: rgb(240, 240, 240);
      height: 35px;
      outline: none;
      padding: 0px 10px;
      color: rgb(104, 103, 103);
    }

    .register input::placeholder {
      color: rgb(204, 204, 204);
    }

    .register .submit {
      width: 100%;
      height: 35px;
      border: 0px;
      border-radius: 25px;
      color: white;
      outline: none;
      cursor: pointer;
      background-color: #e689e6;
      margin-bottom: 20px;
      font-weight: 700;
    }
    .register .submit:hover {
      background-color: #ec46ec;
      transition: 250ms;
    }

    .register .sign-in {
      text-decoration: none;
      font-weight: 700;
      color: royalblue;
    }
  </style>
  <body>
    <div class="register">
      <img
        class="paper_ico"
        src="https://www.clipartmax.com/png/middle/111-1119055_doc-document-list-note-paper-pen-pencil-icon-paper-pencil-icon-png.png"
        alt="paper_icon"
      />
      <h1>REGISTER</h1>
      <a href="auth/google"><button class="media google">G</button></a>

      <p>or use your email adress</p>
      <form action="/register" method="post">
        <input type="text" placeholder="First Name" name="firstName" required />
        <input type="email" placeholder="Email" name="email" />
        <input
          id="fistPassword"
          type="password"
          placeholder="Password"
          name="password"
        />
        <input
          id="lastPassword"
          type="password"
          placeholder="Confirm Password"
        />
        <button class="submit">CREATE ACCOUNT</button>
      </form>
      <P
        >Already have an account?
        <a class="sign-in" href="/login">Sign In</a></P
      >
    </div>
    <script>
      const fistPassword = document.getElementById("fistPassword"),
        lastPassword = document.getElementById("lastPassword");

      document.querySelector("form").addEventListener("submit", (e) => {
        if (
          fistPassword.value !== lastPassword.value ||
          (fistPassword.value.length == 0 && lastPassword.value.length == 0)
        ) {
          e.preventDefault();
          fistPassword.style.border = "0.5px solid red";
          lastPassword.style.border = "0.5px solid red";
        }
      });
    </script>
  </body>
</html>
